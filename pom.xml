		<jackson.version>2.13.2</jackson.version>
		<swagger.version>2.1.13</swagger.version>
		<jawr.version>3.9</jawr.version>
		<lucene.version>3.6.2</lucene.version>
		<slack.version>1.20.1</slack.version>
